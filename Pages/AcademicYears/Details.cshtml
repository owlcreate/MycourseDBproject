@page
@model nscccoursemap_matchacode.Pages.AcademicYears.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>AcademicYear</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AcademicYear.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AcademicYear.Title)
        </dd>
         <dt class="col-sm-2">
            Semester
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AcademicYear.Semesters)
        </dd>
         @* Add a section that lists the Advising Assignments for the selected Academic Year. 
        Info should include Diploma Program Title and Year as well as the advisor's (instructor's) name. *@
       <dt class="col-sm-2">
            Advising Assignments
        </dt>
        <dd class="col-sm-10">
            @foreach (var item in Model.AcademicYear.DiplomaProgramYearSections)
            {
                @foreach (var item2 in item.AdvisingAssignments)
                {
                    <li>@item2.DiplomaProgramYearSection.DiplomaProgramYear.DiplomaProgram.Title -  
                        @item2.Instructor.FullName </li>
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.AcademicYear.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
